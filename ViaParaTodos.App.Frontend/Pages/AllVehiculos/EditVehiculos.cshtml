@page
@model ViaParaTodos.App.Frontend.Pages.EditVehiculosModel
@{
}
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>repl.it</title>
  <link href="style.css" rel="stylesheet" type="text/css" />
  <!-- CSS only -->
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js">

  </script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">

  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js">

  </script>

  <style>
    .city {
      background-color: tomato;
      color: white;
      border: 2px solid black;
      margin: 20px;
      padding: 50px;
      width: 70%;
      height: 100%;
      position: relative;
      display: block;
    }

    .responsive {
      max-width: 100%;
      position: relative;
      display: block;
      width: 50%;
      height: auto;
    }

    .circle {
      height: 300px;
      width: 300px;
      background-color: currentColor;
      border-radius: 50%;
    }

    .boton-barras {
      font-weight: bold;
      border-radius: 50%;
      border: none;
      color: #FFFFFF;
      text-align: center;
      font-size: 28px;
      width: 70px;
      height: 70px;
      transition: all 0.5s;
      cursor: pointer;

    }

    #grad1 {
      height: auto;
      background-color: red;
      /* For browsers that do not support gradients */
      background-image: linear-gradient(to left, black, #BD982D, #BDB42D, #FFC900, #FFEC00);
    }
  </style>
</head>
<div class="w3-container w3-half w3-red">
      <img src="https://agente15.camilocasas.repl.co/Agente/Vehiculo.png" align="center" class="image" width="auto"
        height="130px" data-bs-toggle="collapse" data-bs-target="#demo2">
      <h1>VEHÍCULO</h1>
      <p>Consulte, diligencie, actualice o elimine.</p>
      <div>
        <center><button type="button" class="boton-barras" style="background-color:darkblue" data-bs-toggle="collapse"
            data-bs-target="#demo2">+</button></center>
      </div>
      <div id="demo2" class="collapse"><br>
      <center>
        <H1>DATOS DEL VEHÍCULO</H1>
        
        <form method="post" class=was-validated>
          <input type="hidden" asp-for="vehiculo.Id">
          <label for="fname">Placa:</label><br>

          <input asp-for="vehiculo.Placa" type="text" class="form-control is-invalid" style="width: 70%" ;
            id="validationServer02" required placeholder="Digite aquí la Placa">
          <button type="button" class="btn btn-primary" onclick="alert('Buscando el Vehículo......')">Buscar</button>
          <br><br>

          <label for="lname">Modelo:</label><br>
          <input asp-for="vehiculo.Modelo" type="number" class="form-control is-invalid" style="width: 70%" ;
            id="validationServer02" required placeholder="Digite aquí el Modelo">
          <br><br>

          <label for="lname">Marca:</label><br>
          <input asp-for="vehiculo.Marca" type="text" class="form-control is-invalid" style="width: 70%" ;
            id="validationServer02" required placeholder="Digite aquí la Marca">
          <br><br>

          <label for="lname">Línea:</label><br>
          <input asp-for="vehiculo.Linea" type="text" class="form-control is-invalid" style="width: 70%" ;
            id="validationServer02" required placeholder="Digite aquí la línea">
          <br><br>
          <label for="lname">Color:</label><br>
          <input asp-for="vehiculo.Color" type="text" class="form-control is-invalid" style="width: 70%" ;
            id="validationServer02" required placeholder="Digite aquí el Color">
            <br><br>
            
          <input type="image" src="https://agente15.camilocasas.repl.co/Icon/Car-Add.png" alt="Submit" width="48"
            height="48">

          <input type="image" src="https://agente15.camilocasas.repl.co/Icon/Car-Update.png" alt="Submit" width="50"
            height="50" onclick="alert('VEHÍCULO ACTUALIZADO......')">

          <input type="image" src="https://agente15.camilocasas.repl.co/Icon/Car-Rev.png" alt="Submit" width="48"
            height="48" onclick="alert('VEHÍCULO ELIMINADO......')">
          <br>
          <br>
          <br>
          
        </form>
      </center>
      </div>
    </div>
  </div>