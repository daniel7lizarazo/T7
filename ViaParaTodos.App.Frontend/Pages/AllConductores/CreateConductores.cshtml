@page
@model ViaParaTodos.App.Frontend.Pages.CreateConductoresModel
@{
}
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Crear Conductor</title>
  <link href="style.css" rel="stylesheet" type="text/css" />

   <script src="https://kit.fontawesome.com/b4ddf1f0cb.js" crossorigin="anonymous"></script> 
  <!-- CSS only -->
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js">

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">

  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js">

  </script>

  <style>
    .city {
      background-color: tomato;
      color: white;
      border: 2px solid black;
      margin: 20px;
      padding: 50px;
      width: 70%;
      height: 100%;
      position: relative;
      display: block;
    }

    .responsive {
      max-width: 100%;
      position: relative;
      display: block;
      width: 50%;
      height: auto;
    }

    .circle {
      height: 300px;
      width: 300px;
      background-color: currentColor;
      border-radius: 50%;
    }

    .boton-barras {
      font-weight: bold;
      border-radius: 50%;
      border: none;
      color: #FFFFFF;
      text-align: center;
      font-size: 28px;
      width: 70px;
      height: 70px;
      transition: all 0.5s;
      cursor: pointer;

    }

    #grad1 {
      height: auto;
      background-color: red;
      /* For browsers that do not support gradients */
      background-image: linear-gradient(to left, black, #BD982D, #BDB42D, #FFC900, #FFEC00);
    }
  </style>
</head>
  <div class="container p-5 my-5" style="max-width:75%;background-color: #ffb229;">
    <center>
        <h1 style="font-size:6vw;">Ingrese los Datos del conductor</h1><img src="https://agente15.camilocasas.repl.co/Agente/Conductor4.png" align="center" class="image" width="auto" height="130px">
        <br>

        <form method="post" class=was-validated>

          <input type="hidden" asp-for="conductor.Id">
          <div class="row">
          <div class="col">

            <label asp-for="conductor.NumeroDoc"> <i class="fas fa-id-card"></i> Identificación:</label><br>
            <input asp-for="conductor.NumeroDoc"class="form-control is-invalid" style="width: -webkit-fill-available" id="validationServer02" required>
            <br><br></div>
          <div class="col">
          <label asp-for="conductor.TipoDoc"><i class="fas fa-id-card"></i> Tipo de documento:</label><br>
          <select class="form-select was-validated" asp-for="conductor.TipoDoc" style="width: -webkit-fill-available" ; aria-label="Default select example" required>
            <option selected disabled value="">Seleccione</option>
            <option value="CC">CC</option>
            <option value="TI">TI</option>
            <option value="CE">CE</option>
          </select>
          <br><br></div></div>
          <div class="row">
          <div class="col">
          <label asp-for="conductor.Nombres"><i class="fas fa-id-card"></i> Nombre:</label><br>
          <input asp-for="conductor.Nombres" type="text" class="form-control is-invalid" style="width: -webkit-fill-available" ; id="validationServer02" required placeholder="Digite aquí el Nombre">
          <br><br></div>
          <div class="col">
          <label asp-for="conductor.Apellidos"><i class="fas fa-id-card"></i> Apellidos:</label><br>
          <input asp-for="conductor.Apellidos" type="text" class="form-control is-invalid" style="width:-webkit-fill-available" id="validationServer02" required placeholder="Digite aquí el Apellido"><br><br></div></div>
          <div class="row">  
          <div class="col">
          <label for="lname"><i class="fas fa-mobile-alt"></i> Teléfono:</label><br>
          <input asp-for="conductor.NumeroTelefono" type="text" class="form-control is-invalid" style="width: -webkit-fill-available" ;
            id="validationServer02" required placeholder="Digite aquí el Teléfono">
            <br><br></div>
          <div class="col">
          <label asp-for="conductor.Direccion"><i class="fas fa-house-user"></i> Dirección:</label><br>
          <input asp-for="conductor.Direccion" type="text" class="form-control is-invalid" style="width:-webkit-fill-available" ;
            id="validationServer02" required placeholder="Digite aquí la Dirección">
          <br><br></div></div>

          <label asp-for="conductor.VigenciaLicencia"><i class="far fa-calendar-alt"></i> Fecha de vigencia de la licencia:</label><br>
          <input asp-for="conductor.VigenciaLicencia" class="form-control" style="max-width: fit-content" required>
          <br><br>

          <input type="image" src="https://agente15.camilocasas.repl.co/Icon/AddC.png" alt="Submit" width="48" height="48">
          
          <br>
        </form>
      </center>
  </div>